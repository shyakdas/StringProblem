<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/recent_string_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stack_with_older_string"
        android:textColor="@android:color/black"
        android:textSize="@dimen/sp_14"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/older_text_view_one"
        style="@style/CustomTextViewStyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/recent_string_area"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/older_text_view_two"
        style="@style/CustomTextViewStyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/recent_string_area"
        app:layout_constraintTop_toBottomOf="@id/older_text_view_one" />

    <TextView
        android:id="@+id/older_text_view_three"
        style="@style/CustomTextViewStyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/recent_string_area"
        app:layout_constraintTop_toBottomOf="@id/older_text_view_two" />

</androidx.constraintlayout.widget.ConstraintLayout>